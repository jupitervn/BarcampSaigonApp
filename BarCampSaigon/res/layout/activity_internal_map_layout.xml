<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hour_scroll_view_height"
        android:background="@drawable/toolbar_bgr"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/map_first_floor"
            android:textColor="@color/hour_item_text_color_selected"
            android:textSize="@dimen/screen_title_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_next" />
    </LinearLayout>

    <org.barcampsaigon.android.ui.ScaleImageView
        android:id="@+id/iv_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:scaleType="center"
        android:src="@drawable/first_floor">
    </org.barcampsaigon.android.ui.ScaleImageView>

</LinearLayout>