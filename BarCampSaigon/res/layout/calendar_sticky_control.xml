<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_scroll_view" 
        android:minHeight="50dp"
        >

        <LinearLayout
            android:id="@+id/calendar_horizontal_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
        </LinearLayout>
    </HorizontalScrollView>
    
    <com.emilsjolander.components.stickylistheaders.StickyListHeadersListView
        android:id="@+id/sticky_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dip"
        android:background="@android:color/darker_gray"
        android:clipToPadding="false"
        android:layout_below="@id/calendar_scroll_view"
        />
    

</RelativeLayout>